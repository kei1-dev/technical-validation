{
  "name": "Dify Azure Bicep Dev",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "VARIANT": "3.12-bookworm"
    }
  },
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/azure-bicep-dify,type=bind",
  "workspaceFolder": "/workspaces/azure-bicep-dify",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/devcontainers/features/aws-cli:1": {},
    "ghcr.io/devcontainers/features/azure-cli:1": {
      "version": "latest"
    }
  },
  "runArgs": ["--privileged"],
  "remoteUser": "vscode",
  "remoteEnv": {
    "PIPENV_VENV_IN_PROJECT": "1"
  },
  "containerEnv": {
    "PIPENV_NOSPIN": "1",
    "PIPENV_SKIP_LOCK": "1",
    "DOCKER_BUILDKIT": "1"
  },
  "updateRemoteUserUID": false,
  "postCreateCommand": "bash .devcontainer/scripts/post-create.sh",
  "forwardPorts": [3000, 5001, 80],
  "portsAttributes": {
    "3000": {
      "label": "Dify Web UI"
    },
    "5001": {
      "label": "Dify API Server"
    },
    "80": {
      "label": "Nginx"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode-remote.remote-containers",
        "ms-azuretools.vscode-docker",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-vscode.vscode-node-azure-pack",
        "ms-azuretools.vscode-bicep",
        "ms-vscode.azure-account",
        "ms-azuretools.vscode-azureresourcegroups"
      ],
      "settings": {
        "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
        "python.testing.pytestEnabled": true,
        "python.testing.pytestArgs": ["tests"],
        "bicep.formatterEnabled": true
      }
    }
  }
}
